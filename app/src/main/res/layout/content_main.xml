<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity">


        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:id="@+id/hcv"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/boyd"
                    android:padding="10dp"
                    android:maxHeight="90dp"
                    android:minHeight="90dp"
                    android:maxWidth="50dp"
                    android:minWidth="50dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/maron"
                    android:padding="10dp"
                    android:maxHeight="90dp"
                    android:minHeight="90dp"
                    android:maxWidth="50dp"
                    android:minWidth="50dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/knight"
                    android:padding="10dp"
                    android:maxHeight="90dp"
                    android:minHeight="90dp"
                    android:maxWidth="50dp"
                    android:minWidth="50dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/krotov"
                    android:padding="10dp"
                    android:maxHeight="90dp"
                    android:minHeight="90dp"
                    android:maxWidth="50dp"
                    android:minWidth="50dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bahadur"
                    android:padding="10dp"
                    android:maxHeight="90dp"
                    android:minHeight="90dp"
                    android:maxWidth="50dp"
                    android:minWidth="50dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/loney"
                    android:padding="10dp"
                    android:maxHeight="90dp"
                    android:minHeight="90dp"
                    android:maxWidth="50dp"
                    android:minWidth="50dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sharma"
                    android:padding="10dp"
                    android:maxHeight="90dp"
                    android:minHeight="90dp"
                    android:maxWidth="50dp"
                    android:minWidth="50dp"/>


            </LinearLayout>

        </HorizontalScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/hcv">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="IIT-JEE Books"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        />


</RelativeLayout>
